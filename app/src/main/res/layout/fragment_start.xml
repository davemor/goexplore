<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.gov.eastlothian.gowalk.ui.StartActivity.StartFragment"
    android:background="@color/background_color">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_core_paths"
        android:id="@+id/button_start_core_paths"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/start_activity_button"
        android:onClick="onViewRoutesClicked"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_wildlife"
        android:id="@+id/button_start_wildlife"
        android:layout_below="@+id/button_start_core_paths"
        android:layout_centerHorizontal="true"
        style="@style/start_activity_button"
        android:onClick="onViewWildlifeGuideClicked"
        android:clickable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_logbook"
        android:id="@+id/button_start_logbook"
        android:layout_below="@+id/button_start_wildlife"
        android:layout_centerHorizontal="true"
        android:onClick="onViewLogBookClicked"
        style="@style/start_activity_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_about"
        android:id="@+id/button_start_about"
        android:layout_below="@+id/button_start_logbook"
        android:layout_centerHorizontal="true"
        style="@style/start_activity_button"
        android:onClick="onViewAboutClicked"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/go_explore_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
